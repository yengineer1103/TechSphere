<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="630dp"
        android:background="@color/white"
        android:padding="30dp"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/textViewSessional1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:text="Sessional 1 (out of 36):"/>

        <EditText
            android:id="@+id/editTextSessional1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/textViewSessional1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/textViewSessional1"
            android:inputType="number" />

        <TextView
            android:id="@+id/textViewSessional2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextSessional1"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:text="Sessional 2 (out of 36):"/>

        <EditText
            android:id="@+id/editTextSessional2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/textViewSessional2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/textViewSessional2"
            android:inputType="number" />

        <TextView
            android:id="@+id/textViewSessional3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextSessional2"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:text="Sessional 3 (out of 36):"/>

        <EditText
            android:id="@+id/editTextSessional3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/textViewSessional3"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/textViewSessional3"
            android:inputType="number" />

        <RadioButton
            android:id="@+id/radioButton100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextSessional3"
            android:text="Maximum Marks: 100"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"/>

        <RadioButton
            android:id="@+id/radioButton150"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radioButton100"
            android:text="Maximum Marks: 150"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewPracticalViva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radioButton150"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:text="Practical Viva Marks (out of 50):"/>

        <EditText
            android:id="@+id/editTextPracticalViva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewPracticalViva"
            android:inputType="number"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewExpectedCPI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextPracticalViva"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:text="Expected CPI (float):"/>

        <EditText
            android:id="@+id/editTextExpectedCPI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewExpectedCPI"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextExpectedCPI"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/orange"
            android:text="Submit"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonSubmit"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp" />


    </RelativeLayout>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".dashboard.cpiFragmentActivity">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="550dp"

        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUB 1: "
                android:textAlignment="center"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:id="@+id/sub1"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter sub1 credits"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_below="@id/sub1"
                android:id="@+id/c1"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                android:hint="Enter sub1 expected credit"
                android:textColor="@color/black"
                android:layout_below="@id/c1"
                android:layout_marginBottom="20dp"
                android:id="@+id/g1"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/orange"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUB 2: "
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_below="@id/g1"
                android:id="@+id/sub2"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter sub2 credits"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_below="@id/sub2"
                android:id="@+id/c2"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter sub2 expected credit"
                android:textColorHint="@color/black"
                android:layout_below="@id/c2"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:id="@+id/g2"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/orange"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUB 3: "
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_below="@id/g2"
                android:layout_marginTop="20dp"
                android:id="@+id/sub3"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter sub3 credits"
                android:textColorHint="@color/black"
                android:layout_below="@id/sub3"
                android:textColor="@color/black"
                android:id="@+id/c3"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter sub3 expected credit"
                android:textColorHint="@color/black"
                android:layout_below="@id/c3"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:id="@+id/g3"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/orange"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUB 4: "
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_below="@id/g3"
                android:id="@+id/sub4"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter sub4 credits"
                android:layout_below="@id/sub4"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:id="@+id/c4"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter sub4 expected credit"
                android:layout_below="@id/c4"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:id="@+id/g4"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/orange"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUB 5: "
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_below="@id/g4"
                android:id="@+id/sub5"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter sub5 credits"
                android:textColorHint="@color/black"
                android:layout_below="@id/sub5"
                android:textColor="@color/black"
                android:id="@+id/c5"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                android:hint="Enter sub5 expected credit"
                android:layout_below="@id/c5"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:id="@+id/g5"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/orange"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUB 6: "
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_below="@id/g5"
                android:id="@+id/sub6"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter sub6 credits"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_below="@id/sub6"
                android:id="@+id/c6"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter sub6 expected credit"
                android:textColorHint="@color/black"
                android:layout_below="@id/c6"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:id="@+id/g6"/>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scrollView"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="200dp"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:id="@+id/result"/>

    <Button
        android:id="@+id/btn_calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrollView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="130dp"
        android:backgroundTint="#E65100"
        android:text="Calculate"
        android:textAlignment="center" />


</RelativeLayout>